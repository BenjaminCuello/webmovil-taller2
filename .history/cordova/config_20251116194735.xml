<?xml version='1.0' encoding='utf-8'?>
<widget id="cl.ucn.infomovil" version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>InfoMovil</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>

    <content src="index.html" />

    <!-- Servir assets Cordova por http://localhost en vez de https://localhost para evitar mixed content -->
    <preference name="scheme" value="http" />
    <preference name="hostname" value="localhost" />
    <!-- Alternativa: volver a file:// si fuera necesario -->
    <preference name="AndroidInsecureFileModeEnabled" value="true" />

    <!-- Plugin de whitelist para controlar redes externas -->
    <plugin name="cordova-plugin-whitelist" spec="1.3.5" />

    <!-- Permitir salir a cualquier host -->
    <access origin="*" />
    <allow-navigation href="*" />

    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml"
                    target="/manifest/application"
                    mode="merge">
            <application android:usesCleartextTraffic="true" />
        </edit-config>

        <!-- Referenciar Network Security Config para permitir HTTP en desarrollo -->
        <edit-config file="app/src/main/AndroidManifest.xml"
                    target="/manifest/application"
                    mode="merge">
            <application android:networkSecurityConfig="@xml/network_security_config" />
        </edit-config>

        <!-- Copia del archivo de configuraciÃ³n de red al proyecto Android -->
        <resource-file src="res/xml/network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml" />
    </platform>

</widget>
